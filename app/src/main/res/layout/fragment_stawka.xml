<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_stawka"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="visible"
    tools:context="pl.vot.dexterix.zliczanieczasuzlecen.FragmentStawka">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/spinnerWybierzFirme"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutActivityStawka"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputEditTextStawka"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Podaj wielkość stawki"
                android:text="0" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputEditTextPoczatek"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:hint="Podaj początek obowiązywania stawki"
                android:inputType="time"
                android:text="00:00" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputEditTextKoniec"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:hint="Podaj koniec obowiązywania stawki"
                android:inputType="time"
                android:text="00:00" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputEditTextUwagi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Uwagi" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/buttonDodaj"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Dodaj" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>